import tools as t
import pandas as pd
import numpy as np

'''
    This is the main class that stores all the halo properties
'''
class Halo:
    halo_df = pd.DataFrame()
    host_df = pd.DataFrame()

    def __init__(self, halo, host=None):
        self.halo_df = halo

        if host != None:
            self.host_df = host

    def info(self):
        print(self.halo_df.head())


    def pos(self):
        return self.halo_df[['Xc(6)', 'Yc(7)', 'Zc(8)']]
